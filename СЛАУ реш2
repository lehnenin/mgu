#include <stdio.h>
#define N 5
int main()
{
    // Дана система линейных алгебраических уравнений (СЛАУ) 
    //с верхней (правой) двухдиагональной матрицей, в которой диагональные элементы равны 1
    float A[N][N] = { 1, 2, 0, 0, 0,
                      0, 1,-4, 0, 0,
                      0, 0, 1, 3, 0,
                      0, 0, 0, 1, 4,
                      0, 0, 0, 0, 1};
                    
    float b[N] = {2,3,4,-1,1};
    
    for(int i = 0; i < N; i++)
    {
        for(int j = 0; j < N; j++)
        {
            printf("%f\t",A[i][j]);
        }
        
        printf("|\t %f\n",b[i]);
    }
    */
	
    int N;
    printf("кол-во строк/столбцов n = ");
    scanf("%d", &N);
    printf("\n");
    
    float A[N][N];
    printf("Матрица A\n");
    for (int i = 0; i < N; i++)
        for (int j = 0; j < N; j++)
            scanf("%f", &A[i][j]);
    
        // проверка условий матрицы 
    for (int i = 0; i < N; i++)
    {
        for (int j = 0; j < N; j++)
        {
            if (i == j && A[i][j] == 0)
            {
                printf("определитьель матрицы равен 0 (нет единственного решения)\n");
                return 1;
            }
            if(i > j && A[i][j] != 0)
            {
                printf("неправильный ввод матрицы \n");
                return 1;
            }
            if(j > i+1 && A[i][j] != 0)
            {
                printf("неправильный ввод матрицы \n");
                return 1;
            }
        }
    }// проверка условий матрицы 
    
    float b[N];
    printf("Веткор b\n");
    for (int i = 0; i < N; i++)
        scanf("%f", &b[i]);
    

    float x[N];
    
    x[N-1] = b[N-1];
    
    for(int i = N-2; i >= 0; i--)
    {
        x[i] = b[i] - A[i][i+1]*x[i+1] ;
    }
    
    for(int i = 0; i < N; i++)
    {
        printf("x[%d] = %f\n",i+1,x[i]);
    }

    return 0;
}
